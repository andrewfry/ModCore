<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
    <title>@ViewData["Title"] - ModCore</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/boostrap.overrides.css" />
        <link rel="stylesheet" href="~/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">

    </environment>
</head>
<body>
    <div class="body-container">
        <div class="navbar">
            <div class="fluid-container">
                <div class="navbar-logo">
                    ModCore Admin
                    <a href="#" class="icon-user-nav" id="btnUserNavMenu">
                       
                    </a>
                </div>
                <div class="navbar-content user-nav">
                    <div class="user-settings-container">
                        <a href="#"><i class="fa fa-user-circle-o user-icon" aria-hidden="true"></i><span class="welcome-user">Jesus H. Christ </span><i class="fa fa-angle-down icon-user-options" aria-hidden="true"></i></a>
                    </div>
                    @*<div class="search-container">
                        @Html.TextBox("Search", "", new { @class = "search-input", placeholder = "Search" })
                    </div>*@
                </div>
                <div style="clear: both;"></div>
            </div>
        </div>
        <div class="container body-content">
            <div class="sidebar-main">
                <ul class="sidebar-nav">
                    <li class="icon-listitem">
                        <a class="menu-extend-icon" href="#"></a>
                    </li>
                    <li class="dashboard">
                        <a href="#">Dashboard</a>
                    </li>
                    <li class="pages">
                        <a href="#">Pages</a>
                    </li>
                    <li class="plugins">
                        <a href="#">Plugins</a>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Services</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="body-wrapper">
                <div class="page-tree"><h2 class="title">DisplayPageName</h2></div>
                <div class="body-main">
                    @RenderBody()
                </div>
                <footer>
                    <p>&copy; 2016 - ModCore.Www</p>
                </footer>
            </div>
        </div>
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">

    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
