@model ModCore.ViewModels.Access.LoginViewModel

@{
    ViewData["Title"] = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form action="/Admin/Account/Login" method="post" class="form-horizontal">

    <div class="panel panel-default">
        <div class="panel-title">
            Sign in now
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.HiddenFor(a=>a.ReturnUrl)

                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </div>
    </div>




</form>